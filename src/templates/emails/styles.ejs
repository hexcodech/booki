body{
	background-color: #f5f5f5;
	font-family: sans-serif;
	line-height: 1.5;
	color: #000;
	font-size: 16px;
}
a{
	font-weight: bold;
	colors: #000;
}
em{
	font-style: normal;
	font-weight: bold;
	border-bottom: #FFC86E 2px solid;
}
ul{
	list-style: none;
	padding: 0;
	margin: 0;
}

#email-container{
	background-color: #fff;
	min-height: 100%;
	
	box-shadow: 0px 4px 2px 0px rgba(0, 0, 0, 0.1)
}
#email-header{
	border-bottom: #FFC86E 5px solid;
}

