<!DOCTYPE html>
<html>
	<head>
		<title><%= __("Booki") %> - <%= __("Verify email") %></title>
		
		<meta charset="utf-8">
		
		<link href="/static/res/css/booki.min.css" rel="stylesheet" type="text/css">
		<link href="https://fonts.googleapis.com/css?family=Roboto:400,400i" rel="stylesheet">
		
	</head>
	
	<body>
		<nav class="navbar navbar-dark bg-primary">
			<a class="navbar-brand" href="#"><img src="/static/res/img/logo.svg"></a>
		</nav>
		
		<div class="modal static">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-body">
						<form id="login" method="POST" action="/v1/auth/local/verify-email">
							<div class="form-group">
								<label for="verificationCode"><%= __("Email") %></label>
								<input type="text" class="form-control" id="email" name="email" value="<%= email %>">
							</div>
							<div class="form-group">
								<label for="verificationCode"><%= __("Email verification code") %></label>
								<input type="text" class="form-control" id="verificationCode" name="emailVerificationCode" value="<%= code %>">
							</div>
							<%if (register) { %>
								<div class="form-group">
									<label for="password"><%= __("Your new password") %></label>
									<input type="password" class="form-control" id="password" name="password">
								</div>
							<% } %>
							<button type="submit" class="btn btn-primary btn-block"><%= __('Verify email') %></button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>